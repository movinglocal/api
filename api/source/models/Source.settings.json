{
  "connection": "default",
  "collectionName": "source",
  "info": {
    "name": "source",
    "description": "The articles are automatically imported from these datasources"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "name": {
      "default": "",
      "unique": true,
      "type": "string",
      "required": true
    },
    "url": {
      "default": "",
      "unique": true,
      "type": "string",
      "required": true
    },
    "type": {
      "default": "",
      "type": "enumeration",
      "required": true,
      "enum": [
        "RSS",
        "JSON"
      ]
    },
    "articles": {
      "collection": "article",
      "via": "source",
      "autoPopulate": false
    },
    "location": {
      "model": "location",
      "via": "sources"
    }
  }
}
