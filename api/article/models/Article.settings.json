{
  "connection": "default",
  "collectionName": "article",
  "info": {
    "name": "article",
    "description": "Articles imported from external sources or written directly in the CMS"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "title": {
      "default": "",
      "type": "string",
      "required": true
    },
    "teaser": {
      "default": "",
      "type": "text",
      "required": true
    },
    "content": {
      "default": "",
      "type": "text"
    },
    "isVisible": {
      "default": false,
      "type": "boolean"
    },
    "date": {
      "default": "",
      "type": "date"
    },
    "link": {
      "type": "string"
    },
    "source": {
      "model": "source"
    },
    "tags": {
      "collection": "tag",
      "via": "articles",
      "dominant": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "image_url": {
      "default": "",
      "type": "string"
    },
    "type": {
      "default": "news",
      "type": "enumeration",
      "enum": [
        "news",
        "event"
      ]
    },
    "isHot": {
      "default": false,
      "type": "boolean"
    },
    "status": {
      "default": "none",
      "type": "enumeration",
      "enum": [
        "none",
        "in progress",
        "reviewed"
      ]
    },
    "guid": {
      "unique": true,
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "favorites": {
      "collection": "appuser",
      "via": "favorites",
      "autoPopulate": false
    },
    "geodata": {
      "default": {},
      "type": "json"
    },
    "event date": {
      "type": "date"
    }
  }
}
