{
  "connection": "default",
  "collectionName": "article",
  "info": {
    "name": "article",
    "description": "Articles imported from external sources or written directly in the CMS"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "title": {
      "default": "",
      "type": "string",
      "required": true
    },
    "teaser": {
      "default": "",
      "type": "text",
      "required": true
    },
    "content": {
      "default": "",
      "type": "text"
    },
    "isVisible": {
      "default": false,
      "type": "boolean"
    },
    "date": {
      "default": "",
      "type": "date"
    },
    "link": {
      "type": "string"
    },
    "source": {
      "model": "source",
      "via": "articles"
    },
    "tags": {
      "collection": "tag",
      "via": "articles"
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "image_url": {
      "default": "",
      "type": "string"
    },
    "type": {
      "default": "",
      "type": "enumeration",
      "enum": [
        "journalismus",
        "kollektive"
      ]
    },
    "isHot": {
      "default": false,
      "type": "boolean"
    },
    "status": {
      "default": "in progress",
      "type": "enumeration",
      "enum": [
        "in progress",
        "reviewed"
      ]
    },
    "guid": {
      "unique": true,
      "type": "string"
    }
  }
}
